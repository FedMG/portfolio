{
  // These tasks will run in order when initializing your CodeSandbox project.
  "setupTasks": [
    {
      "name": "Install Root Dependencies",
      "command": "yarn install"
    },
    {
      "name": "Install Frontend Dependencies",
      "command": "cd frontend && yarn install"
    }
  ],

  // These tasks can be run from CodeSandbox. Running one will open a log in the app.
  "tasks": {
    "dev": {
      "name": "dev",
      "command": "cd frontend && yarn dev",
      "runAtStart": false,
      "preview": {
        "port": 3000
      }
    },
    "build": {
      "name": "Build",
      "command": "cd frontend && yarn build",
      "runAtStart": false
    },
    "start": {
      "name": "Start",
      "command": "cd frontend && yarn start",
      "runAtStart": false
    },
    "lint": {
      "name": "Lint",
      "command": "cd frontend && yarn lint",
      "runAtStart": false
    },
    "ts:lint": {
      "name": "TS Lint",
      "command": "cd frontend && yarn ts:lint",
      "runAtStart": false
    },
    "ts:lint:fix": {
      "name": "TS Lint Fix",
      "command": "cd frontend && yarn ts:lint:fix",
      "runAtStart": false
    },
    "test": {
      "name": "Test",
      "command": "cd frontend && yarn test",
      "runAtStart": false
    },
    "test:watch": {
      "name": "Test Watch",
      "command": "cd frontend && yarn test --watch",
      "runAtStart": false
    },
    "test:watch:all": {
      "name": "Test WatchAll",
      "command": "cd frontend && yarn test --watchAll",
      "runAtStart": false
    },
    "ci": {
      "name": "Test CI",
      "command": "cd frontend && yarn test --ci",
      "runAtStart": false
    },
    "coverage": {
      "name": "Coverage",
      "command": "cd frontend && yarn coverage",
      "runAtStart": false
    }
  }
}
